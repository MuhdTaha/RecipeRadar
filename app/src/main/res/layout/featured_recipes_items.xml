<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="240dp"
        android:layout_height="220dp"
        app:cardCornerRadius="33dp">

        <ImageView
            android:id="@+id/featuredImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/chicken_tenders"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/imageGradient"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:src="@drawable/image_btm_overlay"
            />
        <TextView
            android:id="@+id/featuredImageTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here is some sample text"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/arvo_bold"
            android:layout_gravity="bottom"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="30dp"
            />

        <TextView
            android:id="@+id/featuredImageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/arvo_bold"
            android:text="ðŸ•’  30 mins"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            />
        
    </androidx.cardview.widget.CardView>
</LinearLayout>