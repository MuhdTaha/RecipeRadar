<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/navBar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/threebars2" />

    <ImageView
        android:id="@+id/logoIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/recipe_radar2" />

    <TextView
        android:id="@+id/welcomeTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arvo_bold"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Welcome to "
        android:textColor="@color/black"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navBar" />

    <TextView
        android:id="@+id/welcomeTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arvo_bold"
        android:paddingTop="10dp"
        android:text="Recipe Radar!"
        android:textColor="@color/red"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/welcomeTextView1"
        app:layout_constraintStart_toEndOf="@id/welcomeTextView1"
        app:layout_constraintTop_toTopOf="@id/welcomeTextView1" />

    <TextView
        android:id="@+id/searchTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arvo_regular"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="12dp"
        android:text="Scan for delicious recipes and find your next favorite dish!"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTextView1" />

    <TextView
        android:id="@+id/searchView"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/searchview"
        android:ems="10"
        android:focusable="auto"
        android:fontFamily="@font/arvo_bold"
        android:hint="Search Recipe"
        android:inputType="none"
        android:paddingLeft="75dp"
        android:paddingTop="18dp"
        android:paddingRight="60dp"
        android:paddingBottom="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchTextView" />

    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchTextView"
        app:srcCompat="@drawable/search_ic"
        app:tint="@color/dark_red" />

    <TextView
        android:id="@+id/categoriesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arvo_bold"
        android:paddingLeft="20dp"
        android:paddingTop="28dp"
        android:text="Categories"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoriesTitle">

        <RelativeLayout
            android:id="@+id/categoriesLayout"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <ImageView
                android:id="@+id/appetizerImage"
                style="@style/categoriesStyle"
                android:background="@drawable/category_card_bc"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/category_appetizers" />

            <TextView
                android:id="@+id/appetizerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appetizerImage"
                android:layout_alignStart="@id/appetizerImage"
                android:layout_alignEnd="@id/appetizerImage"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/arvo_regular"
                android:text="Appetizers"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/mainImage"
                style="@style/categoriesStyle"
                android:layout_marginStart="125dp"
                android:background="@drawable/category_card_bc"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/category_main" />

            <TextView
                android:id="@+id/mainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainImage"
                android:layout_alignStart="@id/mainImage"
                android:layout_alignEnd="@id/mainImage"
                android:layout_marginStart="30dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/arvo_regular"
                android:text="Main"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/dessertImage"
                style="@style/categoriesStyle"
                android:layout_marginStart="245dp"
                android:background="@drawable/category_card_bc"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/category_dessert" />

            <TextView
                android:id="@+id/dessertText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dessertImage"
                android:layout_alignStart="@id/dessertImage"
                android:layout_alignEnd="@id/dessertImage"
                android:layout_marginStart="24dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/arvo_regular"
                android:text="Dessert"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/drinksImage"
                style="@style/categoriesStyle"
                android:layout_marginStart="365dp"
                android:background="@drawable/category_card_bc"
                android:padding="15dp"
                android:paddingStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/category_drinks" />

            <TextView
                android:id="@+id/drinksText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/drinksImage"
                android:layout_alignStart="@id/drinksImage"
                android:layout_alignEnd="@id/drinksImage"
                android:layout_marginStart="23dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/arvo_regular"
                android:text="Drinks"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/featuredText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arvo_bold"
        android:paddingLeft="20dp"
        android:paddingTop="25dp"
        android:text="Featured Recipes"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/featuredRecView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/featuredText"
        tools:listitem="@layout/featured_recipes_items" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>